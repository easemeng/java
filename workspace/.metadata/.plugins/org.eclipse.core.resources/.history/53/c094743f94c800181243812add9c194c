package com.igeek.day02.array;

public class ArrayTest {

	public static void main(String[] args) {
		//数组的声明方式：
		//方式1：数组中的数据类型 [] 数组名称;（推荐方式）
		//方式2：数组中的数据类型 数组名称 [];（不推荐）
		
		int arrays1[];
		//arrays1[0] = 1;
		//数组的赋值方式 。 1
		int [] arrays = new int [5];  //5 表示数组的长度 。 数组中元素的个数 。 
		arrays[0] = 19;
		arrays[1] = 97;
		arrays[2] = 03;
		arrays[3] = 03;
		arrays[4] = 520;
		//arrays[5] = 1314;  ArrayIndexOutOfBoundsException  超过数组的下标会产生异常
		
		//静态创建方式 。 静态初始化方式 。 
		String [] strs = {"ASD","FGH","JKL"};
		
		String [] strs1 = new String[3];
		strs1[0] = "123";
		strs1[1] = "123";
		strs1[2] = "123";
		
		//获取数组中的单一数据 。 通过 		数组名称[下标志]		来获取指定元素 。 
		System.out.println(strs1[2]);
		
		//如何获得数组的长度   数组名称.length		如何获得字符串长度 。 字符串名称.length();	带小括号的就是方法。 
		System.out.println(strs.length);
		
		
		
		
		
		
		//数组的声明方式：
		//方式1：数组中的数据类型 [] 数组名称;（推荐方式）
		//方式2：数组中的数据类型 数组名称 [];（不推荐）
		
		int arrays3[];
		//arrays1[0] = 1;
		//数组的赋值方式 。 1
		int [] arrays2 = new int [5];  //5 表示数组的长度 。 数组中元素的个数 。 
		arrays2[0] = 45;
		arrays2[1] = 654;
		arrays2[2] = 64;
		arrays2[3] = 87;
		arrays2[4] = 5460;
		//arrays4[5] = 786;  ArrayIndexOutOfBoundsException  超过数组的下标会产生异常
		
		//静态创建方式 。 静态初始化方式 。 
		String [] strs2 = {"A","B","C"};
		
		String [] strs3 = new String[3];
		strs3[0] = "123";
		strs3[1] = "123";
		strs3[2] = "123";
		
		//获取数组中的单一数据 。 通过 		数组名称[下标志]		来获取指定元素 。 
		System.out.println(strs3[2]);
		
		//如何获得数组的长度   数组名称.length		如何获得字符串长度 。 字符串名称.length();	带小括号的就是方法。 
		System.out.println(strs2.length);
		
		
		
		
		//数组的声明方式：
		//方式1：数组中的数据类型 [] 数组名称;（推荐方式）
		//方式2：数组中的数据类型 数组名称 [];（不推荐）
		
		int arrays5[];
		//arrays1[0] = 1;
		//数组的赋值方式 。 1
		int [] arrays4 = new int [5];  //5 表示数组的长度 。 数组中元素的个数 。 
		arrays4[0] = 9;
		arrays4[1] = 9;
		arrays4[2] = 78;
		arrays4[3] = 456;
		arrays4[4] = 453;
		//arrays4[5] = 876;  ArrayIndexOutOfBoundsException  超过数组的下标会产生异常
		
		//静态创建方式 。 静态初始化方式 。 
		String [] strs4 = {"D","E","F"};
		
		String [] strs5 = new String[3];
		strs5[0] = "123";
		strs5[1] = "123";
		strs5[2] = "123";
		
		//获取数组中的单一数据 。 通过 		数组名称[下标志]		来获取指定元素 。 
		System.out.println(strs5[2]);
		
		//如何获得数组的长度   数组名称.length		如何获得字符串长度 。 字符串名称.length();	带小括号的就是方法。 
		System.out.println(strs4.length);
		
		
		
		
		
		//数组的声明方式：
		//方式1：数组中的数据类型 [] 数组名称;（推荐方式）
		//方式2：数组中的数据类型 数组名称 [];（不推荐）
		
		int arrays7[];
		//arrays1[0] = 1;
		//数组的赋值方式 。 1
		int [] arrays6 = new int [5];  //5 表示数组的长度 。 数组中元素的个数 。 
		arrays6[0] = 19;
		arrays6[1] = 97;
		arrays6[2] = 03;
		arrays6[3] = 03;
		arrays6[4] = 520;
		//arrays6[5] = 1314;  ArrayIndexOutOfBoundsException  超过数组的下标会产生异常
		
		//静态创建方式 。 静态初始化方式 。 
		String [] strs6 = {"ASD","FGH","JKL"};
		
		String [] strs7 = new String[3];
		strs7[0] = "123";
		strs7[1] = "123";
		strs7[2] = "123";
		
		//获取数组中的单一数据 。 通过 		数组名称[下标志]		来获取指定元素 。 
		System.out.println(strs7[2]);
		
		//如何获得数组的长度   数组名称.length		如何获得字符串长度 。 字符串名称.length();	带小括号的就是方法。 
		System.out.println(strs6.length);

	}

}
