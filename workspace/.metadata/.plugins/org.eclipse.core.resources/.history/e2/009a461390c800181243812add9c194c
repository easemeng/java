package com.igeek.day01.operator;

public class Demo4 {

	public static void main(String[] args) {
		
		//如何查看一个数的二进制  。   
		String binary = Integer.toBinaryString(-128);
		//0000 0000 0000 0000 0000 0000 0111 1111
		System.out.println(binary);
		
		String result = "1000000111111111111111111111111";
		//111111111111111111111110000000
		System.out.println(result.length());
		
		
		int a = 0;
		System.out.println(~a);
		String binary2 = Integer.toBinaryString(127);
		System.out.println(binary2);
		
		int a2 = -128;
		System.out.println(~a2);
		
		
		
		
		
		//如何查看一个数的二进制  。   
		String binary3 = Integer.toBinaryString(-128);
		//0000 0000 0000 0000 0000 0000 0111 1111
		System.out.println(binary);
		
		String result2 = "1000000111111111111111111111111";
		//111111111111111111111110000000
		System.out.println(result2.length());
		
		
		int a3 = 0;
		System.out.println(~a3);
		String binary4 = Integer.toBinaryString(127);
		System.out.println(binary4);
		
		int a4 = -128;
		System.out.println(~a4);
		
		
		
		
		//如何查看一个数的二进制  。   
		String binary5 = Integer.toBinaryString(-128);
		//0000 0000 0000 0000 0000 0000 0111 1111
		System.out.println(binary5);
		
		String result3 = "1000000111111111111111111111111";
		//111111111111111111111110000000
		System.out.println(result3.length());
		
		
		int a5 = 0;
		System.out.println(~a5);
		String binary6 = Integer.toBinaryString(127);
		System.out.println(binary6);
		
		int a6 = -128;
		System.out.println(~a6);
		
	}

}
