<?xml version="1.0" encoding="UTF-8"?>
<a id="&quot;&quot;">
	<!-- 对于不能直接引用的特殊符号  推荐使用转义的写法 
	
	  &lt; 表示 <
	  &gt; 表示 >
	  &quot; 代表了一个 "
	  &apos; 代表了一个 '
	  &amp; 表示 &
	-->
	
	<!-- CDATA 中定义的内容  如果包含特殊符号	会被自动转义。 -->
	<bean id="mm" className="mm">
		<property>
			1 &lt; 3 &gt; &amp; &quot; &apos;
		</property>
	</bean>
	
	<![CDATA[
		<bean id="mm" className="mm">
			<property name="mm" value="mm">
				1 < 3 > & " '
		</bean>
	]]>

</a>